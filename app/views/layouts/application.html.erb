      <span id="back">back to home page</span>
    <% end %>
  </header>
  <% if @home %>
    <div id="loading"><center><%= image_tag("loading_alpha.gif")%></center></div>
  <% end %>
  <section id="page">
    <% if !@home %>
    <section id="gallery">
      <%= render :partial => 'layouts/nav' %>
      <%= yield %>
    </section>
    <% else %>
      <%= yield %>
    <% end %>
  </section>
